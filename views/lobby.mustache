<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Minesweeper lobby</title>
    </head>
    <body>
        <div id="board_settings">
            <div>
                <label for="width">Width: </label>
                <input id="width" name="width" type="number" value="10" min="1" max="1000">

                <label for="height">Height: </label>
                <input id="height" name="height" type="number" value="10" min="1" max="1000">

                <label for="mines">Mines: </label>
                <input id="mines" name="mines" type="number" value="10" min="1">
            </div>
        </div>
        <button id="new_game">Create game</button>
        <script src="/js/lobby.js"></script>
    </body>
</html>
